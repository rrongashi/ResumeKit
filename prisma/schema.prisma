// Prisma schema for Resume Builder
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Resume {
  id       String  @id @default(cuid())
  userId   String
  title    String
  imageUrl String?

  data Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Template {
  id          String  @id @default(cuid())
  name        String
  description String?
  imageUrl    String
  type        String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
